{
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },

    "emmet.includeLanguages": {
        "html": "html"
    },
    "[svelte]": {
        "editor.defaultFormatter": "svelte.svelte-vscode"
    },

    // chatgpt told me to add this since i was having intellisense issues and high disk usage
    "files.watcherExclude": {
        "**/node_modules/**": true,
        "**/.svelte-kit/**": true
    },
}
